{
	"name": "webpack-codemods",
	"private": true,
	"version": "0.1.0",
	"description": "Codemods for migrating Webpack projects",
	"type": "module",
	"scripts": {
		"lint": "npx -y @biomejs/biome lint .",
		"format": "npx -y @biomejs/biome format --write .",
		"validate": "node ./utils/validate-all.mjs",
		"test": "node ./utils/run-tests.mjs",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"prepare": "husky"
	},
	"devDependencies": {
		"@codemod.com/jssg-types": "^1.0.3",
		"husky": "^9.0.0",
		"typescript": "^5.5.4"
	}
}
